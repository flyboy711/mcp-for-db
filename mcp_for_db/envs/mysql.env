# MySQL数据库连接配置
MYSQL_HOST=localhost
MYSQL_PORT=13308
MYSQL_USER=videx
MYSQL_PASSWORD=password
MYSQL_DATABASE=tpch_tiny

# 数据库连接池配置
MYSQL_DB_POOL_ENABLED=true
MYSQL_DB_POOL_MIN_SIZE=5
MYSQL_DB_POOL_MAX_SIZE=20
MYSQL_DB_POOL_RECYCLE=300
MYSQL_DB_POOL_MAX_LIFETIME=0
MYSQL_DB_POOL_ACQUIRE_TIMEOUT=10.0

# 安全配置
MYSQL_ALLOWED_RISK_LEVELS=LOW
MYSQL_ENABLE_QUERY_CHECK=true
MYSQL_ENABLE_DATABASE_ISOLATION=false
MYSQL_DATABASE_ACCESS_LEVEL=permissive
MYSQL_MAX_SQL_LENGTH=2000
MYSQL_BLOCKED_PATTERNS="DROP TABLE,DROP DATABASE,TRUNCATE"

# 认证配置
MYSQL_DB_AUTH_PLUGIN=mysql_native_password
MYSQL_DB_CONNECTION_TIMEOUT=5